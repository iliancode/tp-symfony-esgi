{% extends 'base.html.twig' %}

{% block title %}Livre index{% endblock %}

{% block body %}
    <h1>Livre index</h1>
    <a class="btn btn-secondary" href="{{ path('app_livre_new') }}">Create new</a>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>Id</th>
            <th>Titre</th>
            <th>Auteur</th>
            <th>Nombre page</th>
            <th>Actions</th>

        </tr>
        </thead>
        <tbody>
        {% for livre in livres %}
            <tr>
                <td>{{ livre.id }}</td>
                <td>{{ livre.titre }}</td>
                <td>{{ livre.auteur }}</td>
                <td>{{ livre.nombrePage }}</td>
                <td>
                   <a class="btn btn-primary" href="{{ path('app_livre_show', {'id': livre.id}) }}">show</a>
                    <a class="btn btn-warning"href="{{ path('app_livre_edit', {'id': livre.id}) }}">edit</a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
