{% extends 'base.html.twig' %}

{% block title %}Auteur index{% endblock %}

{% block body %}
    <h1>Auteur index</h1>
    <a  class="btn btn-secondary" href="{{ path('app_auteur_new') }}">Create new</a>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for auteur in auteurs %}
            <tr>
                <td>{{ auteur.id }}</td>
                <td>{{ auteur.Nom }}</td>
                <td>
                    <a  class="btn btn-primary" href="{{ path('app_auteur_show', {'id': auteur.id}) }}">show</a>
                    <a  class="btn btn-warning"href="{{ path('app_auteur_edit', {'id': auteur.id}) }}">edit</a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
